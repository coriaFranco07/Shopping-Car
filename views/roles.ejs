<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">


<%- include('partial/cabezera.ejs') %>  

  
    <div class="container" tyle="background-color: aliceblue;
    font-family: roboto;
    margin: auto; border-radius: 15px 10px 15px 10px;">

            <a href="/inicio" class="btn btn-outline-light btn-lg px-5" style="background-color: #1f2735; right: 140px; width: 150px; position: fixed; background-color: #1f2735;">Cancel</a>

            <h1 style="background-color: aliceblue;
            font-family: roboto;
            margin: auto;
            text-align: center; border-radius: 15px 10px 15px 10px;">ROLES</h1>

            <a href="/createRol" class="btn btn-outline-info"><i class="fa-solid fa-square-plus"></i></a>


            <table id="roles" class="table table-bordered table-striped text-center nt-4">

                <thead>

                    <tr class="bg-primary text-white">


                        <th scope="col">ID</th>
                        <th scope="col">TIPO</th>
                        <th scope="col">PROBANDO</th>
                        <th scope="col">ACCIONES</th>
                    
    
                    </tr>

                </thead>

                <tbody>

                    <% rol.forEach((rol)=> { %>

                        <tr>

                            <td><%= rol.id_rol %></td> 
                            <td><%= rol.nombre_rol %></td> 
                           
                            
                            <td>
                                
                                <select  id="id_rol" name="id_rol"  tabindex="3" >
                                  <% rol.forEach((r) => { %>


                                    <option   class="text-sm-center" <%= r.id_rol=='basico' ? 'selected' : '' %> value="<%=r.id_rol %>"><%=r.nombre_rol %></option>
                                   
                                  
                                    <% }) %>
                                </select>
                              
                            </td>
                            <td>
                                
                                <select  id="id" name="id"  tabindex="3" >
                                  <% usuarios.forEach((r) => { %>


                                    <option   class="text-sm-center" <%= r.user=='admin' ? 'selected' : '' %> value="<%=r.id %>"><%=r.user%></option>
                                   
                                  
                                    <% }) %>
                                </select>
                              
                            </td>
                            

                            <td>

                                <a href="/editRol/<%= rol.id_rol %>" class="btn btn-outline-info"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a onclick="confirmar(<%= rol.id_rol %>)" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                               

                            </td> 

                            
                            
                        </tr>

                    <% }) %>

                </tbody>

            </table>

        </div>

        <br>


        <%- include('partial/scrip.ejs')%> 

        

        <!-- Script para Eliminar Rol -->
        <script>

            /* $(document).ready(function () {
                $('#carrito').DataTable();
            }); */

            // Eliminando registro usando sweetAlert

            function confirmar(id_rol){

                Swal.fire({
                    
                    title: 'Â¿Confirma eliminar el rol?',
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Confirmar'
                    
                    }).then((result) => {

                    if (result.isConfirmed) {
                        window.location= '/deleteRol/'+id_rol;
                    } 
                });
            }


            

           

        </script>

        

    </body>

</html> 