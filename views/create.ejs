<%- include('partial/cabezera.ejs') %>  

        
        <div class="container mt-4 col-12 d-flex">

            <div class="card border-secondary">

                <div class="card-header bg-primary text-white text-center">Nuevo Producto</div>
                    
                    <div class="card-body">
                        
                        <form action="/save" method="POST">

                            <div class="mb-3">
                                <label for="tipoProducto" class="form-label">Tipo de producto</label>
                                <input type="text" class="form-control" id="tipoProducto" name="tipoProducto" tabindex="1">
                            </div>

                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1">
                            </div>

                            <div class="mb-3">
                                <label for="codigo" class="form-label">Codigo</label>
                                <input type="number" class="form-control" id="codigo" name="codigo" tabindex="1">
                            </div>

                            <div class="mb-3">
                                <label for="stock" class="form-label">Stock</label>
                                <input type="number" class="form-control" id="stock" name="stock" tabindex="1">
                            </div>

                            <div class="mb-3">
                                <label for="precioVenta" class="form-label">Precio</label>
                                <input type="number" class="form-control" id="precioVenta" name="precioVenta" tabindex="1" prefix="$">
                            </div>


                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                                <a href="/admin" class="btn btn-secondary">Cancelar</a>
                            </div>
                            
                            
                        </form>

                    </div>

            </div>
        
        </div>
        
        <%- include('partial/scrip.ejs')%> 
   </body>

</html>